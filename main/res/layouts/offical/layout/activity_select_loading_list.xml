<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loadDatabase.SelectLoadingList"
    android:background="@drawable/plaza">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:weightSum="2">
    <Button
        android:id="@+id/SelectLoadingOfficalList"
        android:layout_weight="1"
        android:layout_width="130dp"
        android:layout_height="200dp"
        android:background="@drawable/imagebuttonoffical"
        android:layout_marginEnd="5dp"/>

    <Button
        android:id="@+id/SelectLoadingLocalList"
        android:layout_weight="1"
        android:layout_width="130dp"
        android:layout_height="200dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/imagebuttonmoje"/>
    </LinearLayout>
</RelativeLayout>
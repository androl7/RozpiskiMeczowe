<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.otaliastudios.zoom.ZoomLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/pilki"
        android:scrollbars="vertical|horizontal"
        app:hasClickableChildren="true"
        app:horizontalPanEnabled="true"
        app:maxZoom="2.0"
        app:maxZoomType="zoom"
        app:minZoom="1.0"
        app:minZoomType="zoom"
        app:overPinchable="true"
        app:overScrollHorizontal="true"
        app:overScrollVertical="true"
        app:verticalPanEnabled="true"
        app:zoomEnabled="true">

        <RelativeLayout
            android:layout_width="1300dp"
            android:layout_height="1050dp">


            <Button
                android:id="@+id/braz16LOST_28"
                android:layout_width="110dp"
                android:layout_height="45dp"
                android:layout_alignStart="@+id/braz16LOST_27"
                android:layout_below="@+id/braz16LOST_27"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_shape"
                android:maxLength="30"
                android:text="LOST.28"
                android:textColor="#000000"
                android:textSize="11dp" />

            <Button
                android:id="@+id/braz16LOST_27"
                android:layout_width="110dp"
                android:layout_height="45dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="50dp"
                android:layout_toEndOf="@+id/braz16WIN_27"
                android:layout_marginTop="50dp"
                android:layout_below="@+id/braz16Team04"
                android:background="@drawable/button_shape"
                android:maxLength="30"
                android:text="LOST.27"
                android:textColor="#000000"
                android:textSize="11dp" />


            <Button
                android:id="@+id/braz16WIN_29"
                android:layout_width="110dp"
                android:layout_height="45dp"
                android:layout_below="@+id/braz16LOST_27"
                android:layout_marginTop="-20dp"
                android:layout_toEndOf="@+id/braz16LOST_28"
                android:background="@drawable/button_shape"
                android:maxLength="30"
                android:text="WIN.29"
                android:textColor="#000000"
                android:textSize="11dp" />

            <EditText

                android:id="@+id/braz16Res30_Lost_27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/braz16WIN_29"
                android:layout_marginBottom="20dp"
                android:layout_toEndOf="@+id/braz16LOST_28"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="2"
                android:singleLine="true"
                android:textSize="12dp" />

            <EditText

                android:id="@+id/braz16Res30_Lost_27_2set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/braz16WIN_29"
                android:layout_marginBottom="20dp"
                android:layout_toEndOf="@+id/braz16Res30_Lost_27"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="2"
                android:singleLine="true"
                android:textSize="12dp" />

            <EditText

                android:id="@+id/braz16Res30_Lost_27_3set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/braz16WIN_29"
                android:layout_marginBottom="20dp"
                android:layout_toEndOf="@+id/braz16Res30_Lost_27_2set"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="2"
                android:singleLine="true"
                android:textSize="12dp" />


            <EditText

                android:id="@+id/braz16Res30_Lost_28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/braz16WIN_29"
                android:layout_toEndOf="@+id/braz16LOST_28"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="2"
                android:singleLine="true"
                android:textSize="12dp" />

            <EditText

                android:id="@+id/braz16Res30_Lost_28_2set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/braz16WIN_29"
                android:layout_toEndOf="@+id/braz16Res30_Lost_27"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="2"
                android:singleLine="true"
                android:textSize="12dp" />


            <EditText

                android:id="@+id/braz16Res30_Lost_28_3set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/braz16WIN_29"
                android:layout_toEndOf="@+id/braz16Res30_Lost_27_2set"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="2"
                android:singleLine="true"
                android:textSize="12dp" />


        </RelativeLayout>
    </com.otaliastudios.zoom.ZoomLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context="com.example.adam.rozpiskimeczowe.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Oficialne"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/EveryOneForEveryOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KAZDY NA KAZDEGO"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="@drawable/button_shape"
        >

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/cup"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/EveryOneWithEveryOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KAZDY Z KAZDYM NA KADEGO Z KAZDYM"
            android:background="@null"
            android:textAlignment="gravity"
            android:gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Brazilian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BRAZYLIJSKI" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Cup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PUCHAROWY" />
    </LinearLayout>
</LinearLayout>

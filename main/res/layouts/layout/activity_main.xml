<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    android:background="#403b3b"
    tools:context="com.example.adam.rozpiskimeczowe.MainActivity">

    <LinearLayout
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3"
        >

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher"
            android:background="@drawable/menu_button"/>

        <ImageButton
            android:id="@+id/menu_Button_Cup"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/menu_button"
            android:src="@drawable/cup_menu"
            android:scaleType="fitCenter"
            android:padding="4dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/menu_button"
            android:src="@drawable/ic_launcher" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp">

        <ImageButton
            android:id="@+id/menu_Button_Braz"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/menu_button"
            android:src="@drawable/braz_menu"
            android:scaleType="fitCenter"
            android:padding="4dp"
            />

        <ImageButton
            android:id="@+id/menu_Button_Offical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/menu_button"
            android:src="@drawable/offical_menu"
            android:scaleType="fitCenter"
            android:padding="4dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            />

        <ImageButton
            android:id="@+id/menu_Button_EFE"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher"
            android:background="@drawable/menu_button"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginBottom="3dp">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher"
            android:background="@drawable/menu_button"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher"
            android:background="@drawable/menu_button"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher"
            android:background="@drawable/menu_button"/>
    </LinearLayout>

</LinearLayout>

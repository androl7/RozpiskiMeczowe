<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/brazwybor2"
    android:focusableInTouchMode="true"
    tools:context="com.example.adam.rozpiskimeczowe.everyoneForEveryone.EFEactiv">


    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/textHowMuchTeams"
        android:text="3"
        android:layout_marginStart="5dp"
        android:buttonTint="#66310c"/>

    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/checkBox3"
        android:text="4"
        android:layout_marginStart="15dp"
        android:buttonTint="#66310c"/>

    <CheckBox
        android:id="@+id/checkBox5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/checkBox4"
        android:text="5"
        android:layout_marginStart="15dp"
        android:buttonTint="#66310c"/>

    <EditText
        android:id="@+id/Name1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textNamesOfTeams"
        android:layout_alignParentStart="true"
        android:inputType="text" />

    <EditText
        android:id="@+id/Name2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Name1" />

    <EditText
        android:id="@+id/Name3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Name2" />

    <EditText
        android:id="@+id/Name4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Name3" />

    <!--<EditText
        android:id="@+id/Name5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Name4" />-->


    <TextView
        android:id="@+id/textHowMuchTeams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Ilość drużyn: "
        android:textSize="23sp"
        android:layout_alignParentStart="true"
        android:textColor="#000000"/>



    <TextView
        android:id="@+id/textNamesOfTeams"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Nazwy drużyn: "
        android:textSize="23sp"
        android:layout_below="@+id/textPkt"
        android:layout_alignStart="@+id/textHowMuchTeams"
        android:textColor="#000000"
        />


    <TextView
        android:id="@+id/textPkt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textHowMuchTeams"
        android:text="Pkt:"
        android:textSize="23sp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/brazEditTextPkt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox3"
        android:layout_toEndOf="@+id/textPkt"
        android:ems="2"
        android:inputType="number"
        android:textSize="20sp"
        android:maxLength="2"
        android:background="@drawable/rounded_edittext"
        android:gravity="center" />


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="-1dp"
        android:left="0dp"
        android:right="0dp"
        android:bottom="-1dp">

        <shape android:shape="rectangle">
            <solid
                android:centerX="0%"
                android:color="#e3d1d1"
                android:type="linear"
                />
            <stroke
                android:width="1dp"
                android:color="#66310c"/>
        </shape>
    </item>
</layer-list>
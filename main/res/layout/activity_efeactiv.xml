<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adam.rozpiskimeczowe.everyoneForEveryone.EFEactiv">

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/textHowMuchTeams"
        android:text="3"
        android:layout_marginStart="5dp"/>

    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/checkBox3"
        android:text="4"
        android:layout_marginStart="15dp"/>

    <CheckBox
        android:id="@+id/checkBox5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/checkBox4"
        android:text="5"
        android:layout_marginStart="15dp"/>

    <CheckBox
        android:id="@+id/checkBox6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/checkBox5"
        android:text="6"
        android:layout_marginStart="15dp"/>

    <EditText
        android:id="@+id/Name1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textNamesOfTeams"
        android:layout_alignParentStart="true"
        android:inputType="text" />

    <EditText
        android:id="@+id/Name2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Name1" />

    <EditText
        android:id="@+id/Name3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Name2" />

    <EditText
        android:id="@+id/Name4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Name3" />

    <EditText
        android:id="@+id/Name5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Name4" />

    <EditText
        android:id="@+id/Name6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Name5" />

    <TextView
        android:id="@+id/textHowMuchTeams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Ilość drużyn: "
        android:textSize="23sp"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textNumberOfSets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="41dp"
        android:text="Ilość setów: "
        android:textSize="23sp" />

    <TextView
        android:id="@+id/textNamesOfTeams"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Nazwy drużyn: "
        android:textSize="23sp"
        android:layout_below="@+id/textNumberOfSets"
        android:layout_alignStart="@+id/textHowMuchTeams"
        />

    <CheckBox
        android:id="@+id/checkBoxSets1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textNumberOfSets"
        android:layout_toEndOf="@id/textHowMuchTeams"
        android:text="1"
         />

    <CheckBox
        android:id="@+id/checkBoxSets2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/checkBoxSets1"
        android:layout_alignTop="@+id/textNumberOfSets"
        android:text="2"
        android:layout_marginLeft="15dp"
        />


    <TextView
        android:id="@+id/textPkt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/checkBox5"
        android:layout_alignTop="@+id/textNumberOfSets"
        android:text="Pkt:"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextPkt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox3"
        android:layout_toEndOf="@+id/textPkt"
        android:ems="2"
        android:inputType="number"
        android:textSize="15sp" />


</RelativeLayout>
